@model Proyecto_Recursos_Humanos.Models.Calculadora
@{
    ViewBag.Title = "Index";
}

<html>

<head>

</head>

<body id="cuerpo">
    <p id="nombre" class="fuente">Calculadora</p>

    <div class="row fuente">
        @using (Html.BeginForm("/Index", "Calcular", FormMethod.Post))
        {
            <div class="form-group">
                <label for="numero1">Primer Número</label>
                <input type="text" class="form-control" id="Numero1" name="Numero1" value="@Model.numero1" />
            </div>

            <div class="form-group">
                <label for="numero2">Segundo Número</label>
                <input type="text" class="form-control" id="numero2" name="numero2" value="@Model.numero2" />
            </div>

            <div class="form-group">
                <label for="total">Total</label>
                <input type="text" class="form-control" id="total" name="total" value="@Model.total" />
            </div>

            <button type="submit" class="btn btn-success" id="sumar" value="sumar" name="calculate">Sumar</button>

            <button type="submit" class="btn btn-danger" id="restar" value="restar" name="calculate">Restar</button>

            <button type="submit" class="btn btn-warning" id="multiplicar" value="multiplicar" name="calculate">Multiplicar</button>

            <button type="submit" class="btn btn-primary" id="dividir" value="dividir" name="calculate">Dividir</button>
           
        }
    </div>
</body>

</html>

