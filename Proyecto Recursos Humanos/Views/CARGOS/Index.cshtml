@model IEnumerable<Proyecto_Recursos_Humanos.Models.CARGOS>

@{
    ViewBag.Title = "Index";
}

    <div id="cuerpo">
        <p id="nombre" class="fuente">Listado de cargos</p>

        <p id="link" class="fuente">
            @Html.ActionLink("Agregar nuevo cargo", "Create")
        </p>
        <table class="table">
            <tr id="latabla">
                <th>
                    @Html.DisplayNameFor(model => model.Cargo)
                </th>
                <th>Opciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="fuente">
                    <td>
                        @Html.DisplayFor(modelItem => item.Cargo)
                    </td>
                    <td id="actions">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id_Car }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id_Car }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Car })
                    </td>
                </tr>
            }

        </table>
        <div id="espacio"></div>
    </div>
